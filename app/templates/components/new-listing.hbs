{{#if addNewListing}}
  <h1>New Listing</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="details">Details</label>
          {{input value=details id="details"}}
        </div>

        <div class="form-group">
          <label for="cost">Cost</label>
          {{input value=cost id="cost"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          {{input value=location id="location"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" type="date"}}
        </div>

        <button {{action 'saveListing'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'listingFormShow'}}>New Listing</button>
{{/if}}
